{
    "name": "lucasangi/simple-payment",
    "description": "Simple Payment Application with Symfony",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/annotations": "^1.11",
        "doctrine/doctrine-bundle": "^2.2",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.8",
        "guzzlehttp/guzzle": "^7.2",
        "lcobucci/error-handling-middleware": "^1.1",
        "ramsey/uuid-doctrine": "^1.6",
        "symfony/console": "5.2.*",
        "symfony/doctrine-messenger": "5.2.*",
        "symfony/dotenv": "5.2.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.2.*",
        "symfony/messenger": "5.2.*",
        "symfony/proxy-manager-bridge": "5.2.*",
        "symfony/validator": "5.2.*",
        "symfony/yaml": "5.2.*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SimplePayment\\": "src/"
        },
        "files": [
            "src/Kernel.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SimplePayment\\Tests\\": "tests/unit"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "phpcs",
            "phpstan analyse --memory-limit=-1",
            "psalm",
            "phpunit"
        ],
        "lint": [
            "phpcs"
        ],
        "lint-fix": [
            "phpcbf"
        ],
        "coverage": [
            "XDEBUG_MODE=coverage phpunit --coverage-text --colors=never --coverage-clover=var/coverage/coverage.clover --log-junit=var/coverage/log-junit.xml"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        },
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "require-dev": {
        "doctrine/coding-standard": "^8.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.77",
        "phpstan/phpstan-doctrine": "^0.12.32",
        "phpunit/phpunit": "^9",
        "psalm/plugin-phpunit": "^0.15.1",
        "psalm/plugin-symfony": "^2.1",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^4.6"
    }
}
